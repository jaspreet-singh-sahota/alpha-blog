<h1>index page</h1>

<table>
  <tr>
    <th>Company</th>
    <th>Contact</th>
    <th colspan= "3">Country</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= truncate(article.description, length: 30)%></td>
        <td><%= link_to 'Show', article_path(article[:id]) %></td>
        <td><%= link_to 'edit', edit_article_path(article[:id]) %></td>
        <td><%= link_to 'Delete', article_path(article[:id]), method: :delete, 
              data: {confirm: "Are you sure, you want to delete this article?"} %></td>
    </tr>
  <% end %>
</table>

<button mt-4><%= link_to "Create new article", new_article_path %></button>
