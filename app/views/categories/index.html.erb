<h1 class="mt-3 text-center">Alpha Bloggers</h1>

<div class="digg_pagination mt-4 mb-4">
    <%= will_paginate @categories, :container => false %>
</div>

<% @categories.each do |category| %>
  <div class="container ">
    <div class="row justify-content-center">
    <div class="col-4">
      <div class="card text-center mb-5 shadow mb-5 bg-white rounded">
        <div class="card-body">
          <h5 class="card-title card-title"><%= link_to category.name, category_path(category) %></h5>
          <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
        </div>
        <div class="card-footer text-muted">
          <small>Joined <%= time_ago_in_words(category.created_at) %> ago</small>
        </div>
      </div>
    </div>
    </div>
  </div>
<% end %>

<div class="digg_pagination  mb-5">
    <%= will_paginate @users, :container => false %>
</div>